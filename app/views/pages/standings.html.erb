
<div class="home-page-holder">
  <div class="standings-block-holder">
	   	<div class="standings-content-holder">
            <div id="standings-block" class="standings-block">
            	<div class="standings-tbl-holder">
              <div class="season-selector-standings">
                <%= form_with url: standings_path, method: :get, local: true do %>
                  <label for="season-select"><strong>Select Season:</strong></label>
                  <%= select_tag :season, options_for_select(@available_seasons, @season), id: "season-select", onchange: "this.form.submit()" %>
                <% end %>
              </div>

                <table id="standings-tbl"class="standings-tbl">
                  <thead>
                    <tr>
                      <th>POS</th>
                      <th>TEAM</th>
                      <th>W</th>
                      <th>L</th>
                      <th>T</th>
                      <th>PF</th> <!-- Points For -->
                      <th>PA</th> <!-- Points Against -->
                      <th>HIGH WEEK</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @teams.each_with_index do |team_season, index| %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= team_season.team.name %></td>
                        <td><%= team_season.wins %></td>
                        <td><%= team_season.losses %></td>
                        <td><%= team_season.ties %></td>
                        <td><%= team_season.points_for %></td>
                        <td><%= team_season.points_against %></td>
                        <td><%= team_season.highest_week %></td>
                      </tr>
                    <% end %>

                  </tbody>
                </table>

                <table id="mobile-standings-tbl" class="mobile-standings-tbl">
                <thead>
                  <tr>
                    <th width="10%">POS</th>
                    <th width="30%">TEAM</th>
                    <th width="10%">W</th>
                    <th width="10%">L</th>
                    <th width="10%">T</th>
                    <th width="10%">PF</th>
                    <th width="10%">PA</th>
                    <th width="10%">HIGH WEEK</th>
                  </tr>
                </thead>
                <tbody>
                  <% @teams.each_with_index do |team_season, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= team_season.team.name %></td>
                      <td><%= team_season.wins %></td>
                      <td><%= team_season.losses %></td>
                      <td><%= team_season.ties %></td>
                      <td><%= team_season.points_for %></td>
                      <td><%= team_season.points_against %></td>
                      <td><%= team_season.highest_week %></td>
                    </tr>
                  <% end %>

                </tbody>
              </table>
        </div>
      </div>
    </div>
  </div>
</div>

